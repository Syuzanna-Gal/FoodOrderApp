<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_rounded_white_10"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cultured_rounded_10"
        android:padding="@dimen/dp_13">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_56"
            android:background="@drawable/bg_rounded_white_10"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_favorite" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bg_rounded_white_10"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_cancel" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        style="@style/TextStyleMedium16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPriceAndWeight"
        style="@style/TextStyleSubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/black_transparent_40" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        style="@style/TextStyleSubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/black_transparent_65" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddToBasket"
        style="@style/BlueRoundedStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_cultured_rounded_10"
        android:text="@string/add_to_basket" />
</androidx.appcompat.widget.LinearLayoutCompat>